<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Google Fonts -->
    <!-- Swapped out Roboto for Noto Sans -->
    <link href="https://fonts.googleapis.com/css?family=Noto+Sans&display=swap" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.12.0/css/all.css" crossorigin="anonymous">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    
    <!-- Your own CSS -->
    <link rel="stylesheet" href="/styles.css">

    <title>Weather and headlines | Weather&News</title>
  </head>
	
	<body>
		<!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark navbarbg">
      <a class="navbar-brand" href="#">Weather&News</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item active">
            <a class="nav-link" href="/">Try a new location</a>
          </li>
        </ul>
      </div>
    </nav>	
	
		<!-- Logo at top of page -->    
		<div class="container w-50 mt-3">
      <img src="logo.png" class="img-fluid">
    </div>

	  <!-- Weather for user-inputted location -->
    <div class="container mt-5">
      <h1 class="left underline">Current weather in <%= @Location %></h1>
      <h4 class="left"> In <%= @Location %>, it is currently <%= @current_temp %> degrees and <%= @current_summary %></h4>
			<h1 class="left underline mt-5">Extended forecast for <%= @Location %></h1>
			<h4 class="left">Here is a look ahead for weather in <%= @Location %></h4>
			<table class = "table table-bordered mt-3">
				<thead class="thead-color">
					<tr>
						<th scope="col">Day</th>
						<th scope="col">Daily summary</th>
						<th scope="col">High temp</th>
						<th scope="col">Low temp</th>
					</tr>
				</thead>	
				<tbody>
					<tr>
						<td>Today</td>
						<td><%= @daily_summary[0] %></td>
						<td><%= @daily_high[0] %> degrees</td>
						<td><%= @daily_low[0] %> degrees</td>
					</tr>
					<tr>
						<td>Tomorrow</td>
						<td><%= @daily_summary[1] %></td>
						<td><%= @daily_high[1] %> degrees</td>
						<td><%= @daily_low[1] %> degrees</td>
					</tr>
					<tr>
						<td>Day after tomorrow</td>
						<td><%= @daily_summary[2] %></td>
						<td><%= @daily_high[2] %> degrees</td>
						<td><%= @daily_low[2] %> degrees</td>
					</tr>
					<tr>
						<td>3 days from today</td>
						<td><%= @daily_summary[3] %></td>
						<td><%= @daily_high[3] %> degrees</td>
						<td><%= @daily_low[3] %> degrees</td>
					</tr>
					<tr>
						<td>4 days from today</td>
						<td><%= @daily_summary[4] %></td>
						<td><%= @daily_high[4] %> degrees</td>
						<td><%= @daily_low[4] %> degrees</td>
					</tr>
					<tr>
						<td>5 days from today</td>
						<td><%= @daily_summary[5] %></td>
						<td><%= @daily_high[5] %> degrees</td>
						<td><%= @daily_low[5] %> degrees</td>
					</tr>
					<tr>
						<td>6 days from today</td>
						<td><%= @daily_summary[6] %></td>
						<td><%= @daily_high[6] %> degrees</td>
						<td><%= @daily_low[6] %> degrees</td>
					</tr>
					<tr>
						<td>7 days from today</td>
						<td><%= @daily_summary[7] %></td>
						<td><%= @daily_high[7] %> degrees</td>
						<td><%= @daily_low[7] %> degrees</td>
					</tr>
				</tbody>
      </table>
		</div>
		
    <div class="container mt-5">
			<h1 class="left underline">US national news headlines</h1>
			<h4 class="left">Here are the day's top news headlines</h4>
			<ul class="left">
			<% for article in @articles %>
				<li>
					<%=article["title"]%>
					--
					<a href=<%=article["url"]%>>Link</a>
				</li> 	
			<% end %>
			</ul>
		</div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
  </body>
</html>